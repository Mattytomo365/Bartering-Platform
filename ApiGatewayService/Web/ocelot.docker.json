{
  "Routes": [
    {
      "DownstreamPathTemplate": "/api/listings/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "listings-service",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/api/listings/{everything}",
      "UpstreamHttpMethod": [ "OPTIONS", "GET", "POST", "PUT", "DELETE" ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer"
      }
    },
    {
      "DownstreamPathTemplate": "/api/discovery/{everything}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "discovery-service",
          "Port": 7143
        }
      ],
      "UpstreamPathTemplate": "/api/discovery/{everything}",
      "UpstreamHttpMethod": [ "GET", "POST" ],
      "AuthenticationOptions": { "AuthenticationProviderKey": "Bearer" }
    },
    {
      "DownstreamPathTemplate": "/api/profile/{everything}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "profile-service",
          "Port": 7199
        }
      ],
      "UpstreamPathTemplate": "/api/profile/{everything}",
      "UpstreamHttpMethod": [ "GET", "POST" ],
      "AuthenticationOptions": { "AuthenticationProviderKey": "Bearer" }
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:8080"
  }
}